{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",  // Or provide the full path, e.g., "C:/MinGW/bin/g++.exe"
            "args": [
                "-g",  // Debugging information
                "${file}",  // The currently active file
                "-o", 
                "${fileDirname}/a.exe"  // Output the executable in the same directory as the source file (or change to a subfolder like "bin/a.exe")
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],  // Matches GCC-related errors
            "detail": "Generated task for compiling C++ code"
        }
    ]
}
